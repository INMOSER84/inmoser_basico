<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ✅ Plantilla de reporte de orden de servicio – Odoo 17 CE compatible -->
        <template id="report_service_order_document">
            <t t-call="web.html_container">
                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="oe_structure"/>

                        <!-- Encabezado -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Service Order:</strong> <span t-field="doc.name"/><br/>
                                <strong>Customer:</strong> <span t-field="doc.partner_id.name"/><br/>
                                <strong>Equipment:</strong> <span t-field="doc.equipment_id.name"/><br/>
                                <strong>Technician:</strong> <span t-field="doc.assigned_technician_id.name"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Date:</strong> <span t-field="doc.scheduled_date"/><br/>
                                <strong>State:</strong> <span t-field="doc.state"/>
                            </div>
                        </div>

                        <!-- Diagnóstico -->
                        <h3>Diagnosis</h3>
                        <div class="border p-3 mb-4">
                            <span t-field="doc.diagnosis"/>
                        </div>

                        <!-- Trabajo realizado -->
                        <h3>Work Performed</h3>
                        <div class="border p-3 mb-4">
                            <span t-field="doc.work_performed"/>
                        </div>

                        <!-- Refacciones -->
                        <h3>Parts Used</h3>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Description</th>
                                    <th class="text-end">Quantity</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.refaction_line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.product_id"/></td>
                                        <td><span t-field="line.description"/></td>
                                        <td class="text-end"><span t-field="line.quantity"/></td>
                                        <td class="text-end"><span t-field="line.unit_price"/></td>
                                        <td class="text-end"><span t-field="line.total_price"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Total -->
                        <div class="row">
                            <div class="col-6 offset-6">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Total:</strong></td>
                                        <td class="text-end"><span t-field="doc.total_amount"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Firmas -->
                        <div class="row mt-5">
                            <div class="col-6 text-center">
                                <p>Customer Signature:</p>
                                <img t-if="doc.customer_signature" t-att-src="image_data_uri(doc.customer_signature)" style="max-height: 100px;" alt="Customer Signature"/>
                            </div>
                            <div class="col-6 text-center">
                                <p>Technician Signature:</p>
                                <p><em>_________________________</em></p>
                            </div>
                        </div>

                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>

        <!-- ✅ Acción de impresión – Odoo 17 CE compatible -->
        <record id="action_report_service_order" model="ir.actions.report">
            <field name="name">Service Order Report</field>
            <field name="model">inmoser.service.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">inmoser_service_order.report_service_order_document</field>
            <field name="report_file">inmoser_service_order.report_service_order_document</field>
            <field name="binding_model_id" ref="model_inmoser_service_order"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
