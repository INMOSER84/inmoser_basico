<?xml version="1.0"?>
<odoo>
  <data>
    <!-- ✅ Vista formulario del wizard – Odoo 17 CE compatible -->
    <record id="view_service_reprogram_wizard_form" model="ir.ui.view">
      <field name="name">inmoser.service.reprogram.wizard.form</field>
      <field name="model">inmoser.service.reprogram.wizard</field>
      <field name="arch" type="xml">
        <form string="Reschedule Service Order">
          <sheet>
            <div class="oe_title">
              <h1>
                <span>Reschedule Service Order</span>
              </h1>
            </div>
            <group>
              <group name="current_info" string="Current Information">
                <field name="service_order_id" readonly="1"></field>
                <field name="current_date" readonly="1"></field>
              </group>
              <group name="new_info" string="New Schedule">
                <field name="new_date" required="1"></field>
                <field name="keep_current_technician"></field>
                <field name="new_technician_id" invisible="keep_current_technician" required="not keep_current_technician"></field>
              </group>
            </group>
            <group string="Available Technicians" invisible="keep_current_technician">
              <field name="available_technicians" nolabel="1" readonly="1">
                <tree>
                  <field name="name" string="Name"></field>
                  <field name="job_id" string="Job"></field>
                  <field name="x_inmoser_technician_level" string="Level"></field>
                  <field name="x_inmoser_available_hours" string="Available Hours"></field>
                </tree>
              </field>
            </group>
            <group string="Rescheduling Details">
              <field name="reason" nolabel="1" placeholder="Please provide a reason for rescheduling..."></field>
            </group>
            <group string="Notifications">
              <field name="notify_customer"></field>
              <field name="notify_technician"></field>
            </group>
          </sheet>
          <footer>
            <button name="action_reschedule" type="object" string="Reschedule" class="oe_highlight"/>
            <button name="action_cancel" type="object" string="Cancel" class="oe_link"/>
          </footer>
        </form>
      </field>
    </record>
    <!-- ✅ Acción del wizard -->
    <record id="action_service_reprogram_wizard" model="ir.actions.act_window">
      <field name="name">Reschedule Service Order</field>
      <field name="res_model">inmoser.service.reprogram.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_service_reprogram_wizard_form"></field>
      <field name="target">new</field>
    </record>
  </data>
</odoo>
