<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_inmoser_callcenter" model="res.groups">
            <field name="name">Inmoser Call Center</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_inmoser_technician" model="res.groups">
            <field name="name">Inmoser Technician</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_inmoser_supervisor" model="res.groups">
            <field name="name">Inmoser Supervisor</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('group_inmoser_callcenter')), (4, ref('group_inmoser_technician'))]"/>
        </record>

        <record id="group_inmoser_manager" model="res.groups">
            <field name="name">Inmoser Manager</field>
            <field name="category_id" ref="base.module_category_services"/>
            <field name="implied_ids" eval="[(4, ref('group_inmoser_supervisor'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="rule_technician_own_orders" model="ir.rule">
            <field name="name">Técnico: Solo órdenes asignadas</field>
            <field name="model_id" ref="model_inmoser_service_order"/>
            <field name="groups" eval="[(4, ref('group_inmoser_technician'))]"/>
            <field name="domain_force">[('assigned_technician_id.user_id', '=', user.id)]</field>
        </record>

        <record id="rule_callcenter_all_orders" model="ir.rule">
            <field name="name">Call Center: Todas las órdenes</field>
            <field name="model_id" ref="model_inmoser_service_order"/>
            <field name="groups" eval="[(4, ref('group_inmoser_callcenter'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>

        <record id="rule_technician_own_equipment" model="ir.rule">
            <field name="name">Técnico: Solo equipos de sus órdenes</field>
            <field name="model_id" ref="model_inmoser_service_equipment"/>
            <field name="groups" eval="[(4, ref('group_inmoser_technician'))]"/>
            <field name="domain_force">[('id', 'in', [order.equipment_id.id for order in user.employee_id.service_order_ids])]</field>
        </record>
    </data>
</odoo>
