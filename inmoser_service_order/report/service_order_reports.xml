<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Service Order Report Action -->
        <record id="action_service_order_report" model="ir.actions.act_window">
            <field name="name">Service Order Analysis</field>
            <field name="res_model">inmoser.service.order</field>
            <field name="view_mode">pivot,graph</field>
            <field name="view_id" ref="view_service_order_pivot"/>
        </record>

        <!-- Pivot View -->
        <record id="view_service_order_pivot" model="ir.ui.view">
            <field name="name">inmoser.service.order.pivot</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="state" type="col"/>
                    <field name="service_type_id" type="row"/>
                    <field name="assigned_technician_id" type="row"/>
                    <field name="scheduled_date" interval="month" type="col"/>
                    <field name="total_amount" type="measure"/>
                </pivot>
            </field>
        </record>
    </data>
</odoo>
