<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Service Equipment Tree View -->
        <record id="view_service_equipment_tree" model="ir.ui.view">
            <field name="name">inmoser.service.equipment.tree</field>
            <field name="model">inmoser.service.equipment</field>
            <field name="arch" type="xml">
                <tree string="Service Equipment">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_type"/>
                    <field name="brand"/>
                    <field name="model"/>
                    <field name="serial_number"/>
                    <field name="location"/>
                    <field name="service_order_count"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Service Equipment Form View -->
        <record id="view_service_equipment_form" model="ir.ui.view">
            <field name="name">inmoser.service.equipment.form</field>
            <field name="model">inmoser.service.equipment</field>
            <field name="arch" type="xml">
                <form string="Service Equipment">
                    <header>
                        <button name="action_view_service_orders" string="View Service Orders" type="object" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="partner_id"/>
                                <field name="equipment_type"/>
                                <field name="brand"/>
                            </group>
                            <group>
                                <field name="model"/>
                                <field name="serial_number"/>
                                <field name="location"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="QR Code" attrs="{'invisible': [('qr_code', '=', False)]}">
                            <field name="qr_code" widget="image" class="oe_avatar" readonly="1"/>
                            <field name="qr_code_text" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Service History">
                                <field name="service_order_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="state"/>
                                        <field name="scheduled_date"/>
                                        <field name="assigned_technician_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Service Equipment Search View -->
        <record id="view_service_equipment_search" model="ir.ui.view">
            <field name="name">inmoser.service.equipment.search</field>
            <field name="model">inmoser.service.equipment</field>
            <field name="arch" type="xml">
                <search string="Search Service Equipment">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_type"/>
                    <field name="brand"/>
                    <field name="serial_number"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Service Equipment Action -->
        <record id="action_service_equipment" model="ir.actions.act_window">
            <field name="name">Service Equipment</field>
            <field name="res_model">inmoser.service.equipment</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
