<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Partner Form View Extension -->
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.inmoser</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page string="Service Information" attrs="{'invisible': [('is_company', '=', False)]}">
                        <group string="Service Client Details">
                            <group>
                                <field name="x_inmoser_client_sequence" readonly="1"/>
                                <field name="x_inmoser_is_service_client"/>
                            </group>
                            <group>
                                <field name="x_inmoser_phone_mobile_2"/>
                            </group>
                            <group>
                                <field name="x_inmoser_client_notes" nolabel="1"/>
                            </group>
                        </group>
                        <group string="Service Statistics">
                            <field name="service_order_count" readonly="1"/>
                        </group>
                    </page>
                </xpath>
                
                <xpath expr="//field[@name='child_ids']/tree//field[@name='type']" position="after">
                    <field name="x_inmoser_is_service_client"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
